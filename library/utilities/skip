DOCUMENTATION = """
---
module: skip
short_description: Skip a specified number of tasks
description:
  - This module causes ansible to skip a specified number of tasks or all
    following tasks
version_added: 1.8
options:
  count:
    description:
      - The number of tasks to skip. Use C(all) to skip all remaining tasks.
    required: false
    default: 9999

author: Matt Martz
"""

EXAMPLES = """
- name: Skip remaining tasks related to software installation
  skip: count=5
  when: software_installed
"""
